{% extends 'base.html.twig' %}

{% block title %}Voir les Propriétaires{% endblock %}

{% block body %}
<div class="container">
    <h1>Gestion des propriétaires</h1>
    <table class="table table-striped">
        <tr>
            <th>Prénom</th>
            <th>Nom</th>
            <th></th>
        </tr>
        {% for p in proprietaires %}
        <tr>
            <td>{{ p.prenom }}</td>
            <td>{{ p.nom }}</td>
            <td>
                <a href="{{ path("app_proprietaire", {"id":p.id}) }}" class="btn btn-warning" >Voir les Chatons</a>
                <a href="{{ path("app_proprietaire_modifier", {"id":p.id}) }}" class="btn btn-info">Modifier</a>
                <a href="{{ path("app_proprietaire_supprimer", {"id":p.id}) }}" class="btn btn-danger" >Supprimer</a>
            </td>
        </tr>
        {% endfor %}
    </table>
    <a href="{{ path('app_proprietaire_ajouter') }}" class="btn btn-primary">Ajouter un propriétaire</a>
</div>
{% endblock %}