{% extends 'base.html.twig' %}

{% block title %}Gestion des chatons{% endblock %}

{% block body %}
    <style>
        .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
        .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
    </style>

    <div class="container">
        <h1>Gestion des chatons</h1>
        <div class="row">
            {% for c in chaton %}
                <div class="col col-3">
                    <div class="card"><img src="{{ c.photo }}" alt=""
                                           class="card-img-top">
                        <div class="card-body">
                            {% if c.sterilise == 0 %}
                                <span>Je m'appelle <b>{{ c.nom }}</b> et <b>je ne suis pas stérilisé !</b></span>
                            {% elseif c.sterilise == 1%}
                                <span>Je m'appelle <b>{{ c.nom }}</b> et <b>je suis stérilisé !</b> </span>
                            {% endif %}
                            <div class="bouton-chaton">
                                <a href="{{ path("app_chaton_modifier", {"id": c.id}) }}" class="btn btn-info">modifier</a>
                                <a href="{{ path("app_chaton_supprimer", {"id": c.id}) }}" class="btn btn-danger">supprimer</a>
                            </div>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
        <a href="{{ path("app_chaton_ajouter") }}" class="mt-5 btn btn-primary">Ajouter un chaton</a>
    </div>
{% endblock %}