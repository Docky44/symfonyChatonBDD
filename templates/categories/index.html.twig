{% extends 'base.html.twig' %}

{% block title %}Menu de gestion{% endblock %}

{% block body %}
    <div class="container">
        <h1>Gestion des chatons en Bdd</h1>
        <table class="table table-striped">
            <tr>
                <th>Titre</th>
                <th>Descriptions</th>
                <th></th>
            </tr>
            {% for c in categories %}
                <tr>
                    <td>{{ c.titre }}</td>
                    <td>{{ c.description }}</td>

                    <td>
                        <a href="{{ path("app_categories_modifier", {"id":c.id}) }}" class="btn btn-info">Modifier</a>
                        <a href="{{ path("app_categories_supprimer", {"id":c.id}) }}" class="btn btn-danger">Supprimer</a>
                        <a href="{{ path("app_chatons", {"id":c.id}) }}" class="btn btn-warning">Voir les chatons</a>
                    </td>
                </tr>
            {% endfor %}
        </table>
        <a href="{{ path("app_categories_ajouter") }}" class="btn btn-primary">Ajouter une categorie</a>
        <a href="{{ path("app_chaton_ajouter") }}" class="btn btn-primary">Ajouter un chaton</a>
        <a href="{{ path('app_proprietaire_ajouter') }}" class="btn btn-primary">Ajouter un propriétaire</a>
        <a href="{{ path('app_proprietaire_voir') }}" class="btn btn-warning">Voir les propriétaires</a>
    </div>
{% endblock %}